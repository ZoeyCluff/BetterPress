vars_prompt:
  - name: "domainShort"
    prompt: "What is the domain (without .com/.net)?"
    private: no

  - name: "domainLong"
    prompt: "What is the domain with .com/.net?"
    private: no

  - name: "cfemail"
    prompt: "What is your letsencrypt email (for sending renewal notices)? Leave blank (hit enter) to skip letsencrypt cert generation"
    private: no
    register: cfemail

  - name: "cfapi"
    prompt: "What is your cloudflare API key? Leave blank (hit enter) to skip adding DNS records to Cloudflare"
    private: no
    register: cfapi

  - name: "mysqluser"
    prompt: "What is your mysql user (that can create users and databases)?"
    default: root
    private: no

  - name: "mysqlpassword"
    prompt: "What is the password for your mysql user?"
    private: no

  - name: "mysqlHost"
    prompt: "What is the mysql Server IP / hostname?"
    default: 127.0.0.1
    private: no

  - name: "ipv4"
    prompt: "What is the ipv4 address of your server?"
    private: no

  - name: "ipv6"
    prompt: "What is the ipv6 address of your server?"
    private: no

  - name: "LetsEncrypt"
    prompt: "Generate production or testing letsencrypt cert? (testing certs are invalid, but won't get you banned for testing)"
    default: production
    private: no
    when: cfemail !=""
    register: LetsEncrypt
